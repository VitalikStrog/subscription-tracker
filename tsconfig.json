{
  "compilerOptions": {
    "target": "es2016",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "moduleDetection": "force"
  },
  "include": ["eslint.config.mjs", "app.ts", "routes", "config", "models", "middlewares", "database", "types", "controllers"]
}
